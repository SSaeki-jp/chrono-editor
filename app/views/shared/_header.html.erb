<header class='top-page-header'>
  <a href='/'>
    <div class='header-title'>
      <h1>ChronoEditor</h1>
    </div>
  </a>
  <div class='changer-tag'>
    <li>
      <p class='classic'>classic<p>
    </li>
    <li>
      <p class='modern'>modern</p>
    </li>
    <li>
      <p class='other'>other</p>
    </li>
  </div>
  <div class='header-nav'>
    <% if user_signed_in? %>
      <li><%= link_to "#{current_user.nickname}",edit_user_registration_path, class: "user-edit" %>でログイン中</li>
      <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete , class: "logout" %></li>
    <% else %>
      <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
      <li><%= link_to '新規登録', new_user_path, class: "sign-up" %></li>
    <% end %>
  </div>
</header>