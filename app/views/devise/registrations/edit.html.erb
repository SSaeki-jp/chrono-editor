<%= render "shared/user_header" %>

<h2><%= resource_name.to_s.humanize %>情報編集</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <label class="form-text">メールアドレス</label>
    <span class="indispensable">必須</span><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <label class="form-text">パスワード</label> <i>（変更したくない場合は空白のままにします）</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em>（<%= @minimum_password_length %>文字以上）</em>
    <% end %>
  </div>

  <div class="field">
    <label class="form-text">パスワード（確認用）</label><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <label class="form-text">現在のパスワード</label> <i>（変更を確定するには、現在のパスワードが必要です）</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "変更する" %>
  </div>
<% end %>

<h3>アカウントの削除</h3>

<p><%= button_to "アカウントを削除する", registration_path(resource_name), data: { confirm: "アカウントを削除します。よろしいですか？" }, method: :delete %></p>

<%= link_to "戻る", :back %>
